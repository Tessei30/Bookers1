<div class="flash">
    <% flash.each do |key, value| %>
       <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>
</div>

<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th><p>Title</p></th>
      <th><p>Body</p></th>
      <th colpson="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><span><%= book.title %></span></td>
      <td><span><%= book.body %></span></td>
      <td><span><%= link_to "Show", "/books/#{book.id}" %></span></td>
      <td><span><%= link_to "Edit", edit_book_path(book)%></span></td>
      <td><span><%= link_to "Destroy", destroy_book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></span></td>
    </tr>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>
<%= form_for(@book) do |f| %>

   <%= render 'layouts/error_messages', book: f.object %>

   <div class="field">
    <label>Title</label>
    <%= f.text_field :title %>
   </div>
   <div class="field">
    <label>Body</label>
    <%= f.text_area :body %>
   </div>
   <div class="actions">
    <%= f.submit 'Create Book' %>
   </div>

<% end %>